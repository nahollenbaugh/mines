<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/dialog_storedGame_topSpace"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_storedGame_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_storedGame_message"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/dialog_storedGame_topSpace"
        app:layout_constraintBottom_toTopOf="@id/dialog_storedGame_list_games"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/dialog_storedGame_message"/>
    <ListView
        android:id="@+id/dialog_storedGame_list_games"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_storedGame_message"
        app:layout_constraintBottom_toTopOf="@id/dialog_storedGame_deleteMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_storedGame_deleteMessage"
        android:text="@string/dialog_storedGame_deleteMessage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_storedGame_list_games"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>