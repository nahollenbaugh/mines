<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/dialog_basic_NWSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Space
        android:id="@+id/dialog_basic_NESpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_basic_message"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        app:layout_constraintTop_toBottomOf="@id/dialog_basic_NWSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_basic_NWSpace"
        app:layout_constraintEnd_toStartOf="@id/dialog_basic_NESpace"
        />

</androidx.constraintlayout.widget.ConstraintLayout>