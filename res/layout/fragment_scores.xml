<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ScoresFragment">

    <Button
        android:id="@+id/button_reset_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_scores_button"
        app:layout_constraintTop_toBottomOf="@id/button_scoreFragment_info"
        app:layout_constraintEnd_toStartOf="@id/endSpace"
        />
    <ListView
        android:id="@+id/list_score_sizes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/startSpace"
        app:layout_constraintEnd_toStartOf="@id/endSpace"
        app:layout_constraintTop_toBottomOf="@id/button_reset_scores"
        android:fadeScrollbars="false"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@color/covered"
        />
    <GridLayout
        android:id="@+id/list_scores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/list_score_sizes"
        app:layout_constraintBottom_toTopOf="@id/bottomSpace"
        app:layout_constraintStart_toEndOf="@id/startSpace"
        app:layout_constraintEnd_toStartOf="@id/endSpace">

        <!--Label rank column-->
        <TextView
            android:id="@+id/list_scores_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/list_scores_rank_title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/list_scores_rank_0"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_1"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_2"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_3"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_4"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_5"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_6"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="7"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_7"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="8"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_8"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="9"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/list_scores_rank_9"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_columnWeight="1"
            android:layout_row="10"
            android:layout_column="0"/>

        <!--users column-->
        <TextView
            android:id="@+id/list_scores_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/list_scores_user_title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/list_scores_user_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="7"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="8"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="9"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/list_scores_user_9"
