            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="10"
            android:layout_column="1"/>

        <!--scores column-->
        <TextView
            android:id="@+id/list_scores_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/list_scores_score_title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/list_scores_score_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="7"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="8"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="9"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/list_scores_score_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_columnWeight="1"
            android:layout_row="10"
            android:layout_column="2"/>
    </GridLayout>
    <TextView
        android:id="@+id/slaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="slaw"/>

    <com.nahollenbaugh.mines.views.DrawnButton
        android:id="@+id/button_scoreFragment_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_reset_scores"/>
    <com.nahollenbaugh.mines.views.DrawnButton
        android:id="@+id/button_scoreFragment_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_scoreFragment_back"/>
    <com.nahollenbaugh.mines.views.DrawnButton
        android:id="@+id/button_scoreFragment_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_scoreFragment_back"/>
    <Space
        android:id="@+id/bottomSpace"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/list_scores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Space
        android:id="@+id/startSpace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_scores"/>
    <Space
        android:id="@+id/endSpace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_score_sizes"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>