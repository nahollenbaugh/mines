<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialog_string_input_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_string_input_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_string_input_label"
        android:labelFor="@id/dialog_string_input_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_string_input_edittext"
        app:layout_constraintEnd_toStartOf="@id/dialog_string_input_edittext"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/dialog_string_input_edittext"
        android:tag="al"
        android:layout_width="@dimen/dialog_save_score_enteruser"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_string_input_label"
        app:layout_constraintTop_toBottomOf="@id/dialog_string_input_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>
